<div class="container">
  <h1>Create a new restaurant</h1>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.submit "Create restaurant", class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to "Back to all restaurants", restaurants_path %>
</div>
