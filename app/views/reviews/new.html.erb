<div class="container">
  <h1>Add a review</h1>
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Create a review", class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to "Back to all restaurants", restaurants_path %>
</div>
